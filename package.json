{
  "name": "furigana-maker",
  "description": "Add furigana to Japanese text on any page for learning kanji pronunciation.",
  "type": "module",
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "private": true,
  "license": "MIT",
  "author": {
    "name": "aiktb",
    "email": "ai.ourship@gmail.com"
  },
  "homepage": "https://furiganamaker.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aiktb/furiganamaker.git"
  },
  "bugs": {
    "url": "https://github.com/aiktb/furiganamaker/issues"
  },
  "scripts": {
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "typecheck": "pnpm --recursive --sequential run typecheck",
    "test:e2e": "pnpm --recursive --sequential run test:e2e:prod",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@types/node": "^24.3.3",
    "lefthook": "^2.0.4",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "overrides": {
      "vite": "catalog:"
    }
  }
}
